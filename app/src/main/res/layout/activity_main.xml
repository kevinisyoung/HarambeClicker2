<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d7e8ef"
    tools:context="com.example.kevin.harambeclicker.MainActivity"
    android:onClick="prayer"
    android:id="@+id/screen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_text"
        android:textColor="@color/accent_material_light"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:id="@+id/startTextView" />


    <ImageView

        android:id="@+id/harambe"
        android:src="@drawable/harambenormal"
        android:layout_width="100px"
        android:layout_height="128px"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/prayers_text"
        android:id="@+id/prayerCounterText"
        android:layout_below="@+id/startTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <ImageView
        android:layout_width="568px"
        android:layout_height="288px"
        android:id="@+id/imageButton"
        android:scaleType="fitXY"
        android:src="@drawable/prayer"
        android:onClick="prayer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/harambeLeft"
        android:src="@drawable/harambeleft"
        android:layout_width="100px"
        android:layout_height="128px"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/harambe"
        android:layout_alignStart="@+id/harambe"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/harambeRight"
        android:src="@drawable/haramberight"
        android:layout_width="100px"
        android:layout_height="128px"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/harambe"
        android:layout_alignStart="@+id/harambe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/multiplier_text"
        android:id="@+id/multiplierCounterText"
        android:layout_below="@+id/prayerCounterText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop"
        android:src="@drawable/harambeshop"
        android:scaleType="fitXY"
        android:layout_below="@+id/startTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
